<Window x:Class="mechanCraft_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mechanCraft_WPF"
        mc:Ignorable="d"
        Title="MechanCraft" Height="450" Width="800">
    <StackPanel>
        <Label Content="MechanCraft" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="30" FontWeight="Bold" FontFamily="arial" Foreground="Blue"/>
        <Label Content="X+3^2=12" HorizontalAlignment="Center" Margin="0,30,0,0" FontSize="30" FontWeight="Bold" FontFamily="arial" x:Name="question"/>
        <TextBox HorizontalAlignment="Center" Width="100" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="25" Margin="0,15,0,0" x:Name="wynik"/>
        <StackPanel Margin="0,150,0,0" Orientation="Horizontal" Width="800">
            <Button Content="Connection" Background="White" BorderThickness="0" Width="100" Height="30" Click="info"/>
            <Button Content="Zatwierdź" Background="White" BorderThickness="0" Width="100" Margin="590,0,0,0" Height="30" HorizontalAlignment="Center" Click="send"/>
        </StackPanel>


    </StackPanel>
</Window>
