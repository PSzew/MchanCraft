<Window x:Class="mechanCraft_WPF.connectioSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mechanCraft_WPF"
        mc:Ignorable="d"
        Title="MechanCraft" Height="200" Width="250">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="20" Margin="20,30,0,0" VerticalAlignment="Top" Width="200">
            <TextBox Name="statusBar" TextAlignment="Center" Width="200"
                       Text="Closed"
                       Height="20" IsReadOnly="True" Background="LightGray"/>
        </StackPanel>
        <ComboBox Name="cmb" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0" Width="200"/>
        <Button Name="connect" Content="connect" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,90,0,0" Width="90" Click="Connect_Click" />
        <Button Name="disconnect" Content="disconnect" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="130,90,0,0" Width="90" Click="Disconnect_Click"/>
    </Grid>
</Window>
